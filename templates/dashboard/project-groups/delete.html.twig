{% extends 'base.html.twig' %}

{% block title %}Grupa Projektów - Usuń - AI SEO Texts{% endblock %}

{% block body %}

    <div class="title-box">
        <h1>Grupa Projektów: <i style="font-weight: 300;">{{ projectGroup.name }}</i></h1>
    </div>

    <div class="projects projects-summary box-container">
        <div class="box">
            <div class="col-next">
                <a href="{{ path('app_user_panel_project_group') }}" class="button go-back">
                    <span><img src="/uploads/default/icons/reply.svg" class="icon" alt=""/>
                    Wróć
                    </span>
                </a>
            </div>
            <div class="col-next">
                Czy na pewno chcesz usunąć tę grupę projektów? <b>Nie da się tego odwrócić!</b>
            </div>
            <div class="col-break"></div>
            <div class="col-next">
                <a href="{{ path('app_user_panel_project_group_delete_confirm', { id: projectGroup.id }) }}"
                   class="button delete">
                    <span><img src="/uploads/default/icons/forward.svg" class="icon" alt=""/>
                    Usuń grupę projektów
                    </span>
                </a>
            </div>
        </div>
    </div>

{% endblock %}