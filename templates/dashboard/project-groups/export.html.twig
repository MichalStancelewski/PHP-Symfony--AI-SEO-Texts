{% extends 'base.html.twig' %}

{% block title %}Grupa Projektów - Eksportuj - AI SEO Texts{% endblock %}

{% block body %}

    <div class="title-box">
        <h1>Grupa Projektów : <i style="font-weight: 300;">{{ projectGroup.name }}</i></h1>
    </div>

    {% if isSuccess == 'success' %}
        <div class="projects projects-summary box-container">
            <div class="box">
                <div class="col-next">
                    <a href="{{ path('app_user_panel_project_group') }}" class="button go-back">
                    <span><img src="/uploads/default/icons/reply.svg" class="icon" alt=""/>
                    Wróć
                    </span>
                    </a>
                </div>
                <div class="col-break"></div>

                <div class="col-next">
                    Artykuły zostały przygotowane do eksportu w pliku TXT!
                </div>

                <div class="col-break"></div>
                <div class="col-next">
                    <a href="{{ pathToAdvanced }}" download="" class="button export">
                    <span><img src="/uploads/default/icons/download.svg" class="icon" alt=""/>
                    Pobierz plik z oznaczeniami
                    </span>
                    </a>
                </div>
                <div class="col-next">
                    <a href="{{ pathToPlain }}" download="" class="button export">
                    <span><img src="/uploads/default/icons/download.svg" class="icon" alt=""/>
                    Pobierz plik czysty
                    </span>
                    </a>
                </div>
                <div class="col-next">
                    <a href="{{ path('app_user_panel_project_group_makeused', { id: projectGroup.id }) }}"
                       class="button go-back">
                    <span><img src="/uploads/default/icons/checkmark.svg" class="icon" alt=""/>
                    Oznacz jako wykorzystane
                    </span>
                    </a>
                </div>
            </div>
        </div>
    {% elseif isSuccess == 'pending' %}
        Błąd - Nie wszystkie projekty zostały zakończone!
    {% else %}
        Wystąpił błąd!
    {% endif %}


{% endblock %}