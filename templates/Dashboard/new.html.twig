{% extends 'base.html.twig' %}

{% block title %}Nowy Projekt - AI SEO Texts{% endblock %}

{% block body %}

    <div class="title-box">
        <h1>Dodaj nowy projekt</h1>
    </div>

    {% if isSuccess == 'success' %}
        <div class="projects projects-summary box-container">
            <div class="box">
                <div class="col-next">
                   <img src="/uploads/default/icons/checkmark.svg" class="icon success" alt=""/>
                </div>
                <div class="col-next">
                    Projekt <b>{{ submission.getName }}</b> utworzony!
                </div>
            </div>
        </div>
    {% elseif isSuccess == 'failure' %}
        <div class="projects projects-summary box-container">
            <div class="box">
                <div class="col-next">
                    <img src="/uploads/default/icons/checkmark.svg" class="icon error" alt=""/>
                </div>
                <div class="col-next">
                    <div class="error-list">
                        <b>Błędy:</b> <br/>
                        {% for error in errors %}
                            {{ error }}<br/>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}


    {{ form_start(form) }}

    <div class="form box-container">

        <div class="box">
            <div class="col-1 ">
                <span class="label"><b>Ustawienia główne</b></span>
            </div>
            <div class="col-1">
                <span class="label">{{ form_label(form.name) }} </span><br/>
                {{ form_widget(form.name) }}
            </div>
            <div class="col-1">
                <span class="label">{{ form_label(form.theme) }} </span><br/>
                {{ form_widget(form.theme) }}
            </div>
            <div class="col-2">
                <span class="label">{{ form_label(form.numberOfArticles) }} </span><br/>
                {{ form_widget(form.numberOfArticles) }}
            </div>
            <div class="col-2">
                <span class="label">{{ form_label(form.textsLength) }} </span><br/>
                {{ form_widget(form.textsLength) }}
            </div>
            <div class="col-1 select">
                <span class="label">{{ form_label(form.language) }} </span><br/>
                {{ form_widget(form.language) }}
            </div>
            <div class="radio">
                <span class="label">{{ form_label(form.withTitle) }} </span><br/>
                {{ form_widget(form.withTitle) }}
            </div>
            <div class="col-1 ">
                <hr>
            </div>
            <div class="col-1 ">
                <span class="label"><b>Karta z linkiem pod artykułami (opcjonalne)</b></span>
            </div>
            <div class="col-1 select">
                <span class="label">{{ form_label(form.cardLinkCoverage) }} </span><br/>
                {{ form_widget(form.cardLinkCoverage) }}
            </div>
            <div class="col-1 textarea">
                <span class="label">{{ form_label(form.cardHeader) }} </span><br/>
                {{ form_widget(form.cardHeader) }}
            </div>
            <div class="col-2">
                <span class="label">{{ form_label(form.cardCompanyName) }} </span><br/>
                {{ form_widget(form.cardCompanyName) }}
            </div>
            <div class="col-2">
                <span class="label">{{ form_label(form.cardCompanyPhone) }} </span><br/>
                {{ form_widget(form.cardCompanyPhone) }}
            </div>
            <div class="col-2">
                <span class="label">{{ form_label(form.cardCompanyEmail) }} </span><br/>
                {{ form_widget(form.cardCompanyEmail) }}
            </div>
            <div class="col-2">
                <span class="label">{{ form_label(form.cardCompanyWebsite) }} </span><br/>
                {{ form_widget(form.cardCompanyWebsite) }}
            </div>
            <div class="col-1 ">
                <hr>
            </div>
            <div class="submit">
                {{ form_row(form.save) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
