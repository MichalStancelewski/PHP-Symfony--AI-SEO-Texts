{% extends 'base.html.twig' %}

{% block title %}Nowy Projekt - AI SEO Texts{% endblock %}

{% block body %}

    <div class="title-box">
        <h1>Dodaj nowy projekt</h1>
    </div>

    {% if isSuccess == 'success' %}
        <div class="projects projects-summary box-container">
            <div class="box">
                <div class="col-next">
                    Projekt <b>{{ submission.getName }}</b> utworzony!
                </div>
            </div>
        </div>
    {% elseif isSuccess == 'failure' %}
        <div class="projects projects-summary box-container">
            <div class="box">
                <div class="col-next">
                    <div class="error-list">
                        <b>Błędy:</b> <br/>
                        {% for error in errors %}
                            {{ error }}<br/>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}


    {{ form_start(form) }}

    <div class="form box-container">

        <div class="box">
            <div class="col-1">
                <span class="label">{{ form_label(form.name) }} </span><br/>
                {{ form_widget(form.name) }}
            </div>
            <div class="col-1">
                <span class="label">{{ form_label(form.theme) }} </span><br/>
                {{ form_widget(form.theme) }}
            </div>
            <div class="col-2">
                <span class="label">{{ form_label(form.numberOfArticles) }} </span><br/>
                {{ form_widget(form.numberOfArticles) }}
            </div>
            <div class="col-2">
                <span class="label">{{ form_label(form.textsLength) }} </span><br/>
                {{ form_widget(form.textsLength) }}
            </div>
            <div class="radio">
                <span class="label">{{ form_label(form.withTitle) }} </span><br/>
                {{ form_widget(form.withTitle) }}
            </div>
            <div class="submit">
                {{ form_row(form.save) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
