{% extends 'base.html.twig' %}

{% block title %}Edytuj projekt - AI SEO Texts{% endblock %}

{% block body %}

    <div class="title-box">
        <h1>Edycja projektu: <i style="font-weight: 300;">{{ project.name }}</i></h1>
    </div>

    {% if isSuccess == 'success' %}
        <div class="projects projects-summary box-container">
            <div class="box">
                <div class="col-next">
                    Projekt <b>{{ submission.getName }}</b> edytowany pomyślnie!
                </div>
            </div>
        </div>
    {% elseif isSuccess == 'failure' %}
        <div class="projects projects-summary box-container">
            <div class="box">
                <div class="col-next">
                    <div class="error-list">
                        <p><b>Edycja projektu nie powiodła się!</b></p>
                        <b>Błędy:</b> <br/>
                        {% for error in errors %}
                            {{ error }}<br/>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}


    {{ form_start(form) }}

    <div class="form box-container">

        <div class="box">
            <div class="col-1">
                <span class="label">{{ form_label(form.name) }} </span><br/>
                {{ form_widget(form.name, {'attr': {'value': project.name }}) }}
            </div>
            <div class="submit">
                {{ form_row(form.save) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
